# Database Configuration Template
# Copy this file to database_config.yaml and fill in your credentials
# DO NOT commit database_config.yaml with actual credentials

database:
  # SQL Server connection settings
  driver: 'ODBC Driver 17 for SQL Server'  # or 'SQL Server'
  server: 'your_server_name_or_ip'
  database: 'your_database_name'
  username: 'your_username'
  password: 'your_password'
  
  # Alternative: Use Windows Authentication
  # trusted_connection: true
  
  # Connection string options
  port: 1433
  timeout: 30
  
  # Query settings
  chunk_size: 10000  # Number of rows to fetch at a time
  
  # Table names
  tables:
    sensor_data: 'sensor_readings'
    failure_events: 'failure_events'
    maintenance_logs: 'maintenance_logs'
    machine_metadata: 'machine_metadata'

# Example connection string format:
# Driver={ODBC Driver 17 for SQL Server};Server=tcp:your_server,1433;Database=your_db;Uid=your_user;Pwd=your_password;Encrypt=yes;TrustServerCertificate=no;
